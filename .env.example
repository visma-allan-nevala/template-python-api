# =============================================================================
# Application Settings
# =============================================================================
# Copy this file to .env and fill in the values for your environment

# Application name (used in logs and metadata)
APP_NAME=my-api

# Environment: local, development, staging, production
APP_ENV=local

# Enable debug mode (true/false)
DEBUG=true

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Database Settings (PostgreSQL)
# =============================================================================
# Option 1: Full connection URL
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# Option 2: Component-based configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=app_user
DATABASE_PASSWORD=app_password
DATABASE_NAME=app_db
DATABASE_SSL=false

# =============================================================================
# Redis Settings
# =============================================================================
# Option 1: Full connection URL
# REDIS_URL=redis://localhost:6379/0

# Option 2: Component-based configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# Security Settings
# =============================================================================
# Comma-separated list of API keys for authentication
# Generate with: python scripts/generate_api_keys.py
API_KEYS=

# Secret key for signing tokens (generate a secure random string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production

# =============================================================================
# JWT Authentication (optional)
# =============================================================================
# JWT_ENABLED=false
# JWT_SECRET=your-jwt-secret
# JWT_ALGORITHM=HS256
# JWT_ISSUER=my-api
# JWT_AUDIENCE=my-api
# JWT_EXPIRATION_MINUTES=60

# =============================================================================
# OAuth Authentication (optional)
# =============================================================================
# OAUTH_ENABLED=false
# OAUTH_ISSUER=https://your-oauth-provider.com
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins (use * for all in development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Logging Settings
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=text

# =============================================================================
# Rate Limiting (optional)
# =============================================================================
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# FastAPI Settings
# =============================================================================
# Root path for reverse proxy deployments (e.g., /api/v1)
# ROOT_PATH=
